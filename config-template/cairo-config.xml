<cairo>
    <resources>
        <resource type="receiver">
            <name>receiver1</name>
            <mrcpPort>32416</mrcpPort>
            <rtpBasePort>42050</rtpBasePort>
            <maxConnects>50</maxConnects>
            <engines>1</engines>
            <recorderEngines>1</recorderEngines>
            <baseRecordingDir>%%RECORD_DIR%%</baseRecordingDir>
            <baseGrammarDir>%%GRAMMAR_DIR%%</baseGrammarDir>
            <ipAddress>%%IP%%</ipAddress>
            <!-- You can overwrite the location like this but we already load
                the sphinx-config.xml from this directory.
            <sphinxConfigUrl>file:///your-config-dir/sphinx-config.xml</sphinxConfigUrl>
            -->
        </resource>

        <resource type="transmitter">
            <name>transmitter1</name>
            <mrcpPort>32417</mrcpPort>
            <rtpBasePort>42150</rtpBasePort>
            <maxConnects>50</maxConnects>
            <engines>1</engines>
            <voiceName>%%VOICE%%</voiceName>
            <basePromptDir>%%PROMPT_DIR%%</basePromptDir>
            <speechSynthesizer>Mary</speechSynthesizer>
            <ipAddress>%%IP%%</ipAddress>
        </resource>
    </resources>
</cairo>
