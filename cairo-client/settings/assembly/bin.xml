<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.bat</include>
      </includes>
      <excludes>
        <exclude>launch.bat</exclude><!-- specified individually in "files" section to allow filtering -->
      </excludes>
    </fileSet>
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <excludes>
        <exclude>launch.sh</exclude><!-- specified individually in "files" section to allow filtering -->
      </excludes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main/java/org/speechforge/cairo/demo</directory>
      <outputDirectory>demo/src/java/org/speechforge/cairo/demo</outputDirectory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/config</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/site/docs</directory>
      <outputDirectory>docs</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>apidocs/files</exclude>
        <exclude>apidocs/options</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>target/${pom.artifactId}-${project.version}.jar</source>
    </file>
    <file>
      <source>README.txt</source>
      <filtered>true</filtered>
    </file>
    <file>
      <source>LICENSE.txt</source>
    </file>
    <file>
      <source>NOTICE.txt</source>
    </file>
    <file>
      <source>bin/launch.bat</source>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>bin/launch.sh</source>
      <outputDirectory>bin</outputDirectory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
    </file>
    <file>
      <source>src/main/resources/grammar/example.gram</source>
      <outputDirectory>demo/grammar</outputDirectory>
    </file>
    <file>
      <source>src/main/resources/grammar/example-loop.gram</source>
      <outputDirectory>demo/grammar</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <scope>runtime</scope>
      <includes>
        <include>commons-cli:commons-cli</include>
        <include>commons-lang:commons-lang</include>
        <include>commons-logging:commons-logging</include>
        <include>directory-network:mina</include>
        <include>log4j:log4j</include>
        <include>org.mrcp4j:mrcp4j</include>
        <include>org.speechforge:cairo-sip</include>
        <include>org.speechforge:cairo-rtp</include>
        <include>org.slf4j:slf4j-simple</include>
        <include>javax.sip:jain-sip-api</include>
        <include>javax.sip:jain-sip-ri</include>
        <include>javax.sdp:nist-sdp</include>
        <include>concurrent:concurrent</include>
        <include>jakarta-regexp:jakarta-regexp</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
